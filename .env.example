# =============================================================================
# COMMAND AGENT V3 ENVIRONMENT CONFIGURATION
# Almost Magic Tech Lab - DigitalOcean/Coolify Production Setup
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION (PostgreSQL on DigitalOcean)
# -----------------------------------------------------------------------------
DB_HOST=your_database_host
DB_PORT=3000
DB_NAME=almostmagic
DB_USER=postgres
DB_PASSWORD=your_database_password

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION (on DigitalOcean)
# -----------------------------------------------------------------------------
REDIS_HOST=your_redis_host
REDIS_PORT=3001
REDIS_PASSWORD=your_redis_password

# -----------------------------------------------------------------------------
# AI API CONFIGURATION
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# -----------------------------------------------------------------------------
# SERVER CONFIGURATION
# -----------------------------------------------------------------------------
PORT=4004
NODE_ENV=production
BASE_URL=http://your-server-ip:4004

# -----------------------------------------------------------------------------
# UPLOAD CONFIGURATION
# -----------------------------------------------------------------------------
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# -----------------------------------------------------------------------------
# SECURITY CONFIGURATION
# -----------------------------------------------------------------------------
SESSION_SECRET=change-this-to-a-random-string
CORS_ORIGIN=*
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# LOGGING CONFIGURATION
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FILE=./logs/command-agent.log

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
ENABLE_GITHUB_INTEGRATION=true
ENABLE_ANALYTICS=false
ENABLE_METRICS=true
